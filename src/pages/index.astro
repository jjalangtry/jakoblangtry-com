---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfilePanel from '../components/ProfilePanel.astro';
import TerminalPanel from '../components/TerminalPanel.astro';
import '../../styles.css';

const weatherApiKey =
  import.meta.env.OPENWEATHERMAP_API_KEY ||
  import.meta.env.PUBLIC_OPENWEATHERMAP_API_KEY ||
  '';
---

<BaseLayout
  title="Jakob Langtry - Software Engineer & Developer"
  description="Professional portfolio of Jakob Langtry, Software Engineering Student at Rochester Institute of Technology"
>
  <div class="page-container">
    <ProfilePanel />
    <TerminalPanel />
  </div>

  <script is:inline define:vars={{ weatherApiKey }}>
    window.ENV = {
      ...(window.ENV || {}),
      OPENWEATHERMAP_API_KEY: weatherApiKey || ''
    };
  </script>
  <script type="module" is:inline>
    import '../../script.js';
  </script>
</BaseLayout>
