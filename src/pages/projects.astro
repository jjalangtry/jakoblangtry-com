---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProfilePanel from "../components/ProfilePanel.astro";
import "../../styles.css";
import raw from "../../public/data/projects.json";

const featured = raw.featured ?? [];
const contributions = raw.contributions ?? [];
const github = raw.github ?? [];
---

<BaseLayout
  title="Projects | Jakob Langtry"
  description="Jakob Langtry's projects — deployed apps, open-source contributions, and GitHub repos."
>
  <a class="skip-link" href="#projects-terminal">Skip to projects</a>
  <main class="page-container" id="main-content">
    <ProfilePanel />

    <section
      class="terminal projects-terminal"
      id="projects-terminal"
      aria-label="Projects terminal"
    >
      <!-- ASCII banner (desktop) -->
      <div class="ascii-art projects-banner" aria-hidden="true">
        <pre>
     ██╗ █████╗ ██╗  ██╗ ██████╗ ██████╗     ██╗      █████╗ ███╗   ██╗ ██████╗████████╗██████╗ ██╗   ██╗
     ██║██╔══██╗██║ ██╔╝██╔═══██╗██╔══██╗    ██║     ██╔══██╗████╗  ██║██╔════╝╚══██╔══╝██╔══██╗╚██╗ ██╔╝
     ██║███████║█████╔╝ ██║   ██║██████╔╝    ██║     ███████║██╔██╗ ██║██║  ███╗  ██║   ██████╔╝ ╚████╔╝
██   ██║██╔══██║██╔═██╗ ██║   ██║██╔══██╗    ██║     ██╔══██║██║╚██╗██║██║   ██║  ██║   ██╔══██╗  ╚██╔╝
╚█████╔╝██║  ██║██║  ██╗╚██████╔╝██████╔╝    ███████╗██║  ██║██║ ╚████║╚██████╔╝  ██║   ██║  ██║   ██║
 ╚════╝ ╚═╝  ╚═╝╚═╝  ╚═╝ ╚═════╝ ╚═════╝     ╚══════╝╚═╝  ╚═╝╚═╝  ╚═══╝ ╚═════╝   ╚═╝   ╚═╝  ╚═╝   ╚═╝</pre>
      </div>

      <!-- ASCII banner (mobile) -->
      <div class="ascii-art projects-banner-mobile" aria-hidden="true">
        <pre>
 ╔═══════════════════╗
 ║  JAKOB LANGTRY    ║
 ║     projects/     ║
 ╚═══════════════════╝</pre>
      </div>

      <!-- ═══ FEATURED / DEPLOYED ═══════════════════════════ -->
      <div class="term-line">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd"> ls -la ./deployed/</span>
      </div>
      <div class="section-label info-text">Live web apps</div>

      <div class="project-cards">
        {
          featured.map((p) => (
            <a
              href={p.url}
              target="_blank"
              rel="noopener noreferrer"
              class="project-card"
              aria-label={`${p.name}: ${p.description}`}
            >
              <div class="card-header">
                <span class="card-title text-command">{p.name}</span>
                {p.language && <span class="card-lang">{p.language}</span>}
              </div>
              <p class="card-desc text-log">{p.description}</p>
              <div class="card-footer">
                <span class="card-url text-info">
                  {p.url.replace("https://", "")}
                </span>
                {p.repo && (
                  <span class="card-repo text-log">source &rarr;</span>
                )}
              </div>
            </a>
          ))
        }
      </div>

      <!-- ═══ CONTRIBUTIONS ══════════════════════════════════ -->
      <div class="term-line section-divider">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd"> ls -la ./contributions/</span>
      </div>
      <div class="section-label info-text">Open-source contributions</div>

      <div class="project-cards">
        {
          contributions.map((p) => (
            <a
              href={p.url}
              target="_blank"
              rel="noopener noreferrer"
              class="project-card"
              aria-label={`${p.name}: ${p.description}`}
            >
              <div class="card-header">
                <span class="card-title text-command">{p.name}</span>
              </div>
              <p class="card-desc text-log">{p.description}</p>
              <div class="card-footer">
                <span class="card-url text-info">
                  {p.url.replace("https://", "")}
                </span>
                {p.repo && p.repo !== p.url && (
                  <span class="card-repo text-log">source &rarr;</span>
                )}
              </div>
            </a>
          ))
        }
      </div>

      <!-- ═══ GITHUB REPOS ═══════════════════════════════════ -->
      <div class="term-line section-divider">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd"> ls -la ./github/</span>
      </div>
      <div class="section-label info-text">GitHub repositories</div>

      <ul class="repo-list" aria-label="GitHub repositories">
        {
          github.map((p, i) => (
            <li>
              <a
                href={p.url}
                target="_blank"
                rel="noopener noreferrer"
                class="repo-row"
                aria-label={`${p.name}: ${p.description ?? ""}`}
              >
                <span class="repo-perms text-log">-rw-r--r--</span>
                <span class="repo-index text-prompt">
                  {String(i + 1).padStart(2, "0")}
                </span>
                <span class="repo-name text-command">{p.name}</span>
                {p.language && <span class="repo-lang">{p.language}</span>}
                <span class="repo-desc text-log">{p.description ?? ""}</span>
              </a>
            </li>
          ))
        }
      </ul>

      <!-- ═══ BACK PROMPT ════════════════════════════════════ -->
      <div class="term-line term-back-line">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd">
          {" "}<a href="/" class="cd-back">cd ..</a>
        </span>
      </div>

      <div class="term-line">
        <span class="prompt">guest@jjalangtry.com:~$</span>
        <span class="projects-cursor terminal-cursor-static" aria-hidden="true"
        ></span>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .projects-terminal {
    padding: 24px 28px;
    overflow-y: auto;
  }

  /* ── Banners ───────────────────────────────────────── */
  .projects-banner {
    display: block;
    margin-bottom: 12px;
  }
  .projects-banner pre {
    font-size: 11px;
    line-height: 1.2;
    overflow-x: auto;
  }
  .projects-banner-mobile {
    display: none;
  }
  @media (max-width: 900px) {
    .projects-banner {
      display: none;
    }
    .projects-banner-mobile {
      display: block;
      margin-bottom: 12px;
    }
  }

  /* ── Terminal lines ────────────────────────────────── */
  .term-line {
    display: flex;
    align-items: baseline;
    gap: 0;
    font-size: 14px;
    line-height: 1.6;
    white-space: pre-wrap;
    word-break: break-all;
  }
  .term-cmd {
    color: var(--text-command);
  }
  .section-label {
    font-size: 12px;
    margin: 2px 0 10px 0;
    letter-spacing: 0.04em;
    opacity: 0.7;
  }
  .section-divider {
    margin-top: 28px;
  }

  /* ── Project cards (featured + contributions) ──────── */
  .project-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 12px;
    margin-bottom: 16px;
  }
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 6px;
    border: 1px solid var(--border-accent);
    padding: 14px 16px;
    text-decoration: none;
    transition:
      border-color 0.15s,
      background 0.15s;
  }
  .project-card:hover {
    border-color: var(--text-info);
    background: rgba(152, 195, 121, 0.05);
  }
  .project-card:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 2px;
  }
  body.light-theme .project-card:hover {
    background: rgba(45, 80, 22, 0.04);
  }
  .card-header {
    display: flex;
    align-items: baseline;
    gap: 10px;
  }
  .card-title {
    font-weight: 700;
    font-size: 15px;
  }
  .card-lang {
    font-size: 11px;
    color: var(--text-log);
    border: 1px solid var(--border-accent);
    padding: 1px 6px;
    white-space: nowrap;
  }
  .card-desc {
    font-size: 13px;
    line-height: 1.5;
    margin: 0;
  }
  .card-footer {
    display: flex;
    gap: 12px;
    font-size: 12px;
    margin-top: auto;
    padding-top: 4px;
  }
  .card-url {
    text-decoration: underline;
  }
  .card-repo {
    opacity: 0.6;
  }

  /* ── GitHub repo list (ls style) ───────────────────── */
  .repo-list {
    list-style: none;
    margin: 0 0 16px 0;
    padding: 0;
  }
  .repo-row {
    display: grid;
    grid-template-columns: 80px 24px minmax(100px, 160px) auto 1fr;
    gap: 0 12px;
    align-items: baseline;
    padding: 2px 0;
    text-decoration: none;
    font-size: 13px;
    line-height: 1.7;
    transition: background 0.1s;
    border-radius: 2px;
    width: 100%;
  }
  .repo-row:hover {
    background: rgba(152, 195, 121, 0.07);
  }
  body.light-theme .repo-row:hover {
    background: rgba(45, 80, 22, 0.06);
  }
  .repo-row:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 2px;
  }
  .repo-perms {
    font-size: 12px;
    white-space: nowrap;
  }
  .repo-index {
    text-align: right;
    white-space: nowrap;
  }
  .repo-name {
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .repo-lang {
    font-size: 11px;
    color: var(--text-log);
    border: 1px solid var(--border-accent);
    padding: 0 5px;
    white-space: nowrap;
    justify-self: start;
  }
  .repo-desc {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* ── Back link ─────────────────────────────────────── */
  .cd-back {
    color: var(--text-info);
    text-decoration: underline;
  }
  .cd-back:hover {
    color: var(--text-primary);
  }
  .term-back-line {
    margin-top: 12px;
  }
  .projects-cursor {
    display: inline-block;
    width: 9px;
    height: 16px;
    background-color: var(--cursor-color);
    margin-left: 8px;
    vertical-align: middle;
    animation: terminalBlink 1s infinite steps(1);
  }

  /* ── Mobile ────────────────────────────────────────── */
  @media (max-width: 768px) {
    .projects-terminal {
      padding: 12px 14px;
    }
    .project-cards {
      grid-template-columns: 1fr;
      gap: 10px;
    }
    .repo-row {
      grid-template-columns: 1fr;
      gap: 0;
      padding: 6px 0;
      border-bottom: 1px solid rgba(152, 195, 121, 0.1);
    }
    .repo-perms,
    .repo-index {
      display: none;
    }
    .repo-name {
      font-size: 14px;
    }
    .repo-lang {
      display: inline-block;
      margin-top: 2px;
    }
    .repo-desc {
      font-size: 12px;
      white-space: normal;
    }
  }
</style>
