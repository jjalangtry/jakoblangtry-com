      </div>

      <!-- ls -la invocation -->
      <div class="term-line">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd"> ls -la</span>
      </div>

      <!-- header row -->
      <div class="term-line ls-header info-text" aria-hidden="true">
        total {projectsData.length}
      </div>

      <!-- project rows -->
      <ul class="projects-list" aria-label="Project list">
        {
          projectsData.map((project, i) => {
            const displayUrl = project.url
              .replace("https://", "")
              .replace("http://", "");
            return (
              <li>
                <a
                  href={project.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="project-row"
                  aria-label={`Open ${project.name}: ${project.description ?? ""}`}
                >
                  <span class="proj-perms">-rw-r--r--</span>
                  <span class="proj-index text-prompt">
                    {String(i + 1).padStart(2, "0")}
                  </span>
                  <span class="proj-name text-command">{project.name}</span>
                  <span class="proj-desc text-log">
                    {project.description ?? ""}
                  </span>
                  <span class="proj-arrow text-info">→</span>
                  <span class="proj-url text-info">{displayUrl}</span>
                </a>
              </li>
            );
          })
        }
      </ul>

      <!-- back prompt -->
      <div class="term-line term-back-line">
        <span class="prompt">guest@jjalangtry.com:~/projects$</span>
        <span class="term-cmd">
          {" "}<a href="/" class="cd-back">cd ..</a>
        </span>
      </div>

      <!-- blinking cursor -->
      <div class="term-line">
        <span class="prompt">guest@jjalangtry.com:~$</span>
        <span class="projects-cursor terminal-cursor-static" aria-hidden="true"
        ></span>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* ── Projects terminal section ──────────────────────────── */
  .projects-terminal {
    padding: 24px 28px;
    overflow-y: auto;
  }

  /* Banner visibility */
  .projects-banner {
    display: block;
    margin-bottom: 12px;
  }
  .projects-banner pre {
    font-size: 11px;
    line-height: 1.2;
    overflow-x: auto;
  }

  .projects-banner-mobile {
    display: none;
  }

  @media (max-width: 900px) {
    .projects-banner {
      display: none;
    }
    .projects-banner-mobile {
      display: block;
      margin-bottom: 12px;
    }
  }

  /* Generic terminal line */
  .term-line {
    display: flex;
    align-items: baseline;
    gap: 0;
    font-size: 14px;
    line-height: 1.6;
    white-space: pre-wrap;
    word-break: break-all;
  }

  .term-cmd {
    color: var(--text-command);
  }

  .ls-header {
    margin: 4px 0 2px;
    font-size: 13px;
  }

  /* ── Project list ─────────────────────────────────────────── */
  .projects-list {
    list-style: none;
    margin: 0 0 16px 0;
    padding: 0;
  }

  .project-row {
    display: grid;
    grid-template-columns:
      /* perms */
      80px
      /* index */ 24px
      /* name  */ 140px
      /* desc  */ 1fr
      /* arrow */ 16px
      /* url   */ auto;
    gap: 0 12px;
    align-items: baseline;
    padding: 2px 0;
    text-decoration: none;
    font-size: 13px;
    line-height: 1.7;
    transition: background 0.1s;
    border-radius: 2px;
    width: 100%;
  }

  .project-row:hover {
    background: rgba(152, 195, 121, 0.07);
  }

  body.light-theme .project-row:hover {
    background: rgba(45, 80, 22, 0.06);
  }

  .project-row:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 2px;
  }

  .proj-perms {
    color: var(--text-log);
    font-size: 12px;
    white-space: nowrap;
  }

  .proj-index {
    color: var(--text-prompt);
    text-align: right;
    white-space: nowrap;
  }

  .proj-name {
    color: var(--text-command);
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .proj-desc {
    color: var(--text-log);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .proj-arrow {
    color: var(--text-info);
    text-align: center;
  }

  .proj-url {
    color: var(--text-info);
    text-decoration: underline;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* back link */
  .cd-back {
    color: var(--text-info);
    text-decoration: underline;
  }

  .cd-back:hover {
    color: var(--text-primary);
  }

  .term-back-line {
    margin-top: 12px;
  }

  /* static blinking cursor */
  .projects-cursor {
    display: inline-block;
    width: 9px;
    height: 16px;
    background-color: var(--cursor-color);
    margin-left: 8px;
    vertical-align: middle;
    animation: terminalBlink 1s infinite steps(1);
  }

  /* ── Mobile ─────────────────────────────────────────────── */
  @media (max-width: 768px) {
    .projects-terminal {
      padding: 12px 14px;
    }

    .project-row {
      grid-template-columns: 1fr;
      gap: 0;
      padding: 6px 0;
      border-bottom: 1px solid rgba(152, 195, 121, 0.1);
    }

    .proj-perms,
    .proj-index,
    .proj-arrow {
      display: none;
    }

    .proj-name {
      font-size: 14px;
    }

    .proj-desc {
      font-size: 12px;
      white-space: normal;
    }

    .proj-url {
      font-size: 12px;
    }
  }
</style>
