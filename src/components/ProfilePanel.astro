<aside class="bio-container" aria-label="Profile information">
  <div class="profile-image-container">
    <img src="/jakob.jpg" alt="Jakob Langtry" class="profile-image" />
  </div>
  <nav class="social-links" aria-label="Social links">
    <a
      href="https://github.com/JJALANGTRY"
      target="_blank"
      rel="noopener noreferrer"
      class="social-link github"
      aria-label="Visit Jakob Langtry on GitHub"
    >
      <i class="fab fa-github" aria-hidden="true"></i>
    </a>
    <a
      href="https://linkedin.com/in/jjalangtry"
      target="_blank"
      rel="noopener noreferrer"
      class="social-link linkedin"
      aria-label="Visit Jakob Langtry on LinkedIn"
    >
      <i class="fab fa-linkedin-in" aria-hidden="true"></i>
    </a>
    <a
      href="https://instagram.com/jakoblangtry"
      target="_blank"
      rel="noopener noreferrer"
      class="social-link instagram"
      aria-label="Visit Jakob Langtry on Instagram"
    >
      <i class="fab fa-instagram" aria-hidden="true"></i>
    </a>
  </nav>
  <div class="bio-text">
    <div id="typed-bio"></div>
    <span class="cursor">|</span>
  </div>
  <div class="quick-actions" aria-label="Quick actions">
    <a href="/projects" class="quick-action-link">View Projects</a>
    <a
      href="https://resume.jjalangtry.com"
      target="_blank"
      rel="noopener noreferrer"
      class="quick-action-link">Resume</a
    >
    <a href="mailto:jjalangtry@gmail.com" class="quick-action-link">Contact</a>
  </div>
</aside>

<script>
  const bioText =
    "Hi, I'm Jakob Langtry. I'm a software engineering student at Rochester Institute of Technology. I love to code, I love to learn, and I'd love if you'd check out my projects!";

  const el = document.getElementById("typed-bio");
  if (el) {
    if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
      el.textContent = bioText;
      const cur = document.querySelector(".bio-text .cursor");
      if (cur) cur.style.display = "none";
    } else {
      let i = 0;
      function type() {
        if (i < bioText.length) {
          el.textContent += bioText.charAt(i);
          i++;
          setTimeout(type, Math.random() * 50 + 30);
        } else {
          const cur = document.querySelector(".bio-text .cursor");
          if (cur) {
            cur.style.animation = "none";
            cur.style.opacity = "0";
          }
        }
      }
      setTimeout(type, 1000);
    }
  }
</script>
